<?xml version='1.0' encoding='utf-8'?>
<widget id="baani.radio" android-versionCode="2" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Baani Radio</name>
		<preference name="splashscreen" value="splash" />
    <description>
        Listen live Gurbaani telecaset from around the world
    </description>
    <author email="creators.guru@gmail.com" href="http://app.codemode.in">
        Seetpal Singh
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="http://blog.codemode.in/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="skype:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
		<icon src="res/drawable/ic_launcher.png" />
		<preference name="orientation" value="portrait" />
</widget>
